
<%= javascript_include_tag :defaults %>
﻿<div id="page">
  <!-- Wrapper -->
  <div class="wrapper">
    <!-- Left column/section -->
    <section class="column width6 first">
      <div class="clear">&nbsp;</div>
      <div class="dataTables_wrapper" id="example_wrapper">
        <div id="add_user" class="dataTables_length"><%= link_to '新建广告', new_add_path %></div>
        <table class="display stylized" id="example">
          <thead>
            <tr>
              <th style="width: 125px;">广告名称</th>
              <th style="width: 137px; ">广告链接</th>
              <th style="width: 137px; ">查看</th>
              <th style="width: 170px; ">编辑</th>
              <th style="width: 107px; ">删除</th>
            </tr>
          </thead>
          <tbody>
            <% @adds.each do |add| %>
              <tr class="gradeA odd">
                <td><%= add.name %></td>
                <td><%= add.url %></td>
                <td><%= link_to 'Show', add %></td>
                <td><%= link_to 'Edit', edit_add_path(add) %></td>
                <td><%= link_to 'Destroy', add, :confirm => '确定删除', :method => :delete %></td>
              </tr>
            <%end%>
          </tbody>

        </table>
        <%= will_paginate @adds,:params => {:name=> params[:name]} %>

      </div>

      <div class="clear">&nbsp;</div>

    </section>
    <!-- End of Left column/section -->

    <!-- End of Right column/section -->
  </div>
  <!-- End of Wrapper -->
</div>

