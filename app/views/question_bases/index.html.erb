<%= javascript_include_tag :defaults %>
﻿<div id="page">
  <!-- Wrapper -->
  <div class="wrapper">
    <!-- Left column/section -->
    <section class="column width6 first">
      <div class="dataTables_wrapper" id="example_wrapper">
        <div id="example_filter" class="dataTables_filter">
          <form action="/question_bases",method="get">根据姓名查找: <input type="text" name = "chind_name" value="<%=params[:chind_name]%>">
             <input name="question_id" type="hidden" value="<%=params[:question_id]%>">
            <input type="submit" class="btn btn-green big" value="提交">
          </form>
        </div>
          <table class="display stylized" id="example">
            <tr>
              <th style="width: 125px;">孩子姓名</th>
              <th style="width: 137px; ">孩子年龄</th>
              <th style="width: 137px; ">查看</th>
              <th style="width: 107px; ">删除</th>
            </tr>
          </thead>
          <tbody>
            <% @question_bases.each do |question_basis| %>
              <tr class="gradeA odd">
                <td><%= question_basis.chind_name %></td>
                <td><%= question_basis.child_age %></td>
                <td><%= link_to '查看', question_basis,:target=>"_blank" %></td>
               
                <td><%= link_to '删除', "question_bases/#{question_basis.id}?question_id=#{params[:question_id]}", :confirm => 'Are you sure?', :method => :delete %></td>
              </tr>
            <%end%>
          </tbody>

        </table>
        <%= will_paginate @question_bases,:params => {:chind_name=> params[:chind_name],:question_id=> params[:question_id]} %>

      </div>

      <div class="clear">&nbsp;</div>

    </section>
    <!-- End of Left column/section -->

    <!-- End of Right column/section -->
  </div>
  <!-- End of Wrapper -->
</div>


