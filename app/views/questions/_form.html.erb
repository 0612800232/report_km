<div id="page" style="height:500px">
  <!-- Wrapper -->
  <div class="wrapper">
    <!-- Left column/section -->
    <section class="column width6 first">

      <h3>新增/编辑问卷</h3>
      <% if @question.errors.any? %>
        <% @question.errors.full_messages.each do |msg| %>
          <div class="box box-info"><%=msg%></div>
        <% end %>
      <%end%>

      <%= simple_form_for @question,:html=>{:multipart=>true} do |f| %>
        <fieldset>
          <legend>新增/编辑问卷</legend>

          <p>
            <label class="required" for="name">问卷名称</label><br/>
            <%= f.text_field :name,:class=>"half" %>
          </p>
          <p class="box"><input type="submit" class="btn btn-green big" value="下一步"/>
            or
            <input type="reset" class="btn" value="重置"/></p>

        </fieldset>

      <%end%>
  </div>

  <!-- End of Wrapper -->
</div>
