<%= javascript_include_tag :defaults %>
﻿<div id="page">
  <!-- Wrapper -->
  <div class="wrapper">
    <!-- Left column/section -->
    <section class="column width6 first">
      <div class="clear">&nbsp;</div>
      <div class="dataTables_wrapper" id="example_wrapper">
        <div id="add_user" class="dataTables_length"><%= link_to '新建首页滚动图片', "/images_indices/new" %></div>
        <div id="example_filter" class="dataTables_filter">
         
        </div>
          <table class="display stylized" id="example">
            <tr>
               <th style="width: 125px;">图片标ID</th>
              <th style="width: 125px;">图片标题</th>
              <th style="width: 250px; ">图片链接</th>
              <th style="width: 137px; ">小图</th>
              <th style="width: 137px; ">大图</th>
              <th style="width: 137px; ">跳转方式</th>
              <th style="width: 170px; ">编辑</th>
              <th style="width: 107px; ">删除</th>
            </tr>
          </thead>
          <tbody>
            <% @images_indices.each do |images_indice| %>
              <tr class="gradeA odd">
                 <td><%= images_indice.id %></td>
                <td><%= images_indice.title %></td>
                <td><%= images_indice.link %></td>
                <td><%= images_indice.small_img %></td>
                <td><%= images_indice.img %></td>
                <td><%= images_indice.target %></td>
                <td><%= link_to '编辑', "/images_indices/#{images_indice.id}/edit"%></td>
                <td><%= link_to '删除', "/images_indices/#{images_indice.id}", :confirm => 'Are you sure?', :method => :delete %></td>
              </tr>
            <%end%>
          </tbody>

        </table>
    

      </div>

      <div class="clear">&nbsp;</div>

    </section>
    <!-- End of Left column/section -->

    <!-- End of Right column/section -->
  </div>
  <!-- End of Wrapper -->
</div>

