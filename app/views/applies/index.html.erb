                <%= javascript_include_tag :defaults %>
                  <div id="page">
                    <!-- Wrapper -->                
                    <div class="wrapper">
                      <!-- Left column/section -->                
                      <section class="column width6 first">
                        <div id="example_filter" class="dataTables_filter">
                          <form action='/applies', method='get'>
                            根据用户名称查找:
                            <input type="text" name = "name" value="<%=params[:name]%>">
                            <input type="submit" class="btn btn-green big" value="提交"></form>
                        </div>
                        <table class="display stylized" id="example">
                          <thead>
                            <tr>
                              <th style="width: 125px;">用户名称</th>
                              <th style="width: 125px;">email</th>
                              <th style="width: 125px;">联系电话</th>
                              <th style="width: 125px;">qq</th>
                              <th style="width: 125px;">留言</th>
                              <th style="width: 50px; ">查看</th>
                              <th style="width: 50px; ">删除</th>
                            </tr>
                          </thead>
                          <tbody>
                            <% @applies.each do |apply| %>
                              <tr class="gradeA odd">
                                <td>
                                  <%= apply.name %></td>
                                  <td>
                                    <%= apply.email %></td>
                                    <td>
                                      <%= apply.phone %></td>
                                      <td>
                                        <%= apply.qq %></td>
                                        <td>
                                          <%= apply.memo %></td>
                                          <td>
                                            <%= link_to '查看', apply %></td>
                                            
                                            <td>
                                              <%= link_to '删除', apply, :confirm =>'Are you sure?', :method => :delete %></td>
                                            </tr>
                                            <%end%></tbody>
                                          </table>
                                          <%= will_paginate @apply , :params =>
                                            {:title=> params[:title]} %>
                                            <div class="clear">&nbsp;</div>

                                          </section>
                                          <!-- End of Left column/section -->                

                                          <!-- End of Right column/section --> </div>
                                        <!-- End of Wrapper --> </div>
                                    </div>
