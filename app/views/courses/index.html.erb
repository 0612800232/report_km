                    <%= javascript_include_tag :defaults %>
                    <div id="page">
                      <!-- Wrapper -->                    
                      <div class="wrapper">
                        <!-- Left column/section -->                    
                        <section class="column width6 first">
                          <div id="add_user" class="dataTables_length">
                            <%= link_to '新增课程', new_course_path %></div>
                            <div id="example_filter" class="dataTables_filter">
                              <form action='/courses', method='get'>
                                根据课程查找:
                                <input type="text" name = "title" value="<%=params[:name]%>                    
                                ">
                                <input type="submit" class="btn btn-green big" value="提交"></form>
                            </div>
                            <table class="display stylized" id="example">
                              <thead>
                                <tr>
                                  <th style="width: 125px;">课程名称</th>
                                  <th style="width: 125px;">课程模板</th>
                                  <th style="width: 125px;">课程类别</th>
                                  <th style="width: 125px;">年龄段</th>
                                  <th style="width: 125px;">课程描述</th>
                                  <th style="width: 50px; ">查看</th>
                                  <th style="width: 50px; ">编辑</th>
                                  <th style="width: 50px; ">删除</th>
                                </tr>
                              </thead>
                              <tbody>
                                <% @courses.each do |course| %>
                                  <tr class="gradeA odd">
                                    <td>
                                      <%= course.name %></td>
                                       <%= course.page_temp.name if course.page_temp%></td>
                                      <td>
                                        <%= course.course_type.name %></td>
                                        <td>
                                         <%= course.age_range%></td>
                                          
                                          <td>
                                           <%= raw course.desc %></td>
                                            <td>
                                              <%= link_to '查看', course %></td>
                                              <td>
                                                <%= link_to '编辑', edit_course_path(course) %></td>
                                                <td>
                                                  <%= link_to '删除', course, :confirm =>'Are you sure?', :method => :delete %></td>
                                                </tr>
                                                <%end%></tbody>
                                              </table>
                                              <%= will_paginate @course , :params =>
                                                {:title=> params[:title]} %>
                                                <div class="clear">&nbsp;</div>

                                              </section>
                                              <!-- End of Left column/section -->                    

                                              <!-- End of Right column/section --> </div>
                                            <!-- End of Wrapper --> </div>
                                          </div>